<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#D3D3D3" />

    <TextView
        android:id="@+id/list_item_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_text"
        android:textColor="#000"
        android:textSize="@dimen/archive_question_text_size" />

    <LinearLayout
        android:id="@+id/list_item_question_collapsible_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_question_answer_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:textSize="@dimen/archive_answer_text_size" />

        <TextView
            android:id="@+id/list_item_question_answer_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:textSize="@dimen/archive_answer_text_size" />

        <TextView
            android:id="@+id/list_item_question_answer_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:textSize="@dimen/archive_answer_text_size" />

        <TextView
            android:id="@+id/list_item_question_answer_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:textSize="@dimen/archive_answer_text_size" />

        <TextView
            android:id="@+id/list_item_question_answer_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:textSize="@dimen/archive_answer_text_size" />

        <TextView
            android:id="@+id/list_item_question_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/placeholder_text"
            android:textSize="@dimen/archive_id_text_size" />

    </LinearLayout>
</LinearLayout>
